<body>
  {{!-- slide out menu --}}
  <span onclick="openNav()" id="navSpan">&#9776;</span>
  <nav id="mysidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a class="navbar-btn mb-4" id="myProfile">Look Out Menu</a>
    {{!-- change location --}}
    <li class="nav-item">
      <form class="clearfix mb-4" method="GET" action="/location">
        <button class="btn btn-link navbar-btn">Change Location</button>
      </form>
    </li>
    {{!-- access favorites --}}
    <li class="nav-item">
      <form class="clearfix mb-4" method="GET" action="/favorites">
        <button class="btn btn-link navbar-btn">Favorites</button>
      </form>
      {{!-- new favorite --}}
    </li>
    <li class="nav-item">
      <form class="clearfix mb-4" method="GET" action="/newfavorite">
        <button class="btn btn-link navbar-btn">Add Favorite</button>
      </form>
      {{!-- log out --}}
    <li class="nav-item">
      <form class="clearfix mb-4" method="POST" action="/logout">
        <button class="btn btn-link navbar-btn">Logout</button>
      </form>
    </li>
  </nav>

  <!-- body from home.handlebars -->
  {{{body}}}

  {{!-- log in modal script --}}
  {{{_loginModal.script}}}

